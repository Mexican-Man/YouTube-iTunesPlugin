{
    "name":"YouTube to iTunes",
    "manifest_version":2,
    "version":"0.3",
    "description":"Generates an iTunes link for songs on YouTube",
    "icons":{
    },
	"browser_action": {
		"default_icon": "icons/apple.png",
		"default_popup": "popup.html"
	},
    "background":{
        "persistent":false,
        "scripts":[
            "background.html"
        ]
    },
    "content_scripts": [
		{
			"matches": ["https://www.youtube.com/watch*"],
			"js": ["jquery.js","itunes1.js","itunes2.js","script.js"]
    	}
	],
	"permissions": [
		"tabs",
		"storage",
        "http://*/"
    ]
}